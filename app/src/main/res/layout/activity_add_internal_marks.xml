<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/welcomrheading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15sp"
        android:layout_marginBottom="16dp"
        android:background="?attr/colorPrimaryDark">
        <TextView
            android:id="@+id/welcomee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WELCOME"
            android:textColor="#ffff"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Internal Marks"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_student_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_subject_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter MID Marks One: "
            android:textSize="15dp"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/edit_text_mid_marks_one"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_border"
            android:hint="Enter MID Marks One"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter MID Marks Two: "
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edit_text_mid_marks_two"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:background="@drawable/blue_border"
            android:hint="Enter MID Marks Two"

            />

    </LinearLayout>

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Update" />

</LinearLayout>