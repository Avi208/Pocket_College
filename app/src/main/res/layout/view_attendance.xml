<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >
    <include android:id="@+id/attendence"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar_faculty_attendence_view"/>

    <TextView android:textSize="18.0dip"
        android:textColor="#ffffffff"
         android:id="@id/textView1"
        android:visibility="gone"
          android:paddingLeft="80.0dip" 
          android:paddingRight="10.0dip"
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           android:layout_marginLeft="6.0dip" 
           android:layout_marginTop="5.0dip" 
           android:layout_marginRight="5.0dip" 
           android:text="Attendance Report" />

   <Spinner android:id="@+id/month" 
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5.0dip" 
            android:layout_marginTop="10.0dip" 
            android:layout_marginRight="5.0dip" 
            android:layout_marginBottom="15.0dip" />


<LinearLayout android:orientation="horizontal" android:paddingLeft="10.0dip" android:paddingRight="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="100.0">
        
<TextView android:textSize="15.0dip"
          
          android:gravity="left" 
          android:id="@+id/txt"
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:text="Subject"
    android:layout_marginLeft="5.0dip"
          android:layout_weight="80.0" />

<TextView android:textSize="15.0dip" 
          
          android:gravity="left" 
          android:id="@+id/txtone" 
          android:paddingLeft="24.0dip" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:layout_marginLeft="12.0dip" 
          android:text="Attend/Total" 
          android:layout_weight="20.0" />
    
</LinearLayout>

<LinearLayout android:orientation="vertical" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:weightSum="100.0">

<ScrollView android:id="@+id/scrollView1" 
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_weight="70.0">

<LinearLayout android:orientation="vertical" 
              android:id="@+id/table" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:layout_marginLeft="5.0dip"
              android:layout_marginRight="9.0dip" />
</ScrollView>
        
    </LinearLayout>
</LinearLayout>