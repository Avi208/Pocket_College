<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />

            <data android:scheme="*" />
        </intent>
    </queries>
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="https" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:name=".GlobalVariables"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketCollege"
        tools:targetApi="31">
        <activity
            android:name=".NoticeValidator"
            android:exported="false" />
        <activity
            android:name=".AllStudentListActivity"
            android:exported="true" />
        <activity
            android:name=".MailToParents"
            android:exported="true" />
        <activity
            android:name=".MyStudentProfile"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".Welcome_Screen"
            android:exported="true" />
        <activity
            android:name=".HomeLoign"
            android:exported="true" />
        <activity
            android:name=".TeacherLogin"
            android:exported="true" />
        <activity
            android:name=".Parent_Welcome_Screen"
            android:exported="true" />
        <activity
            android:name=".InternalMarks"
            android:exported="true" />
        <activity
            android:name=".View_notice"
            android:exported="true" />
        <activity
            android:name=".Student_View_attendance"
            android:exported="true" />
        <activity
            android:name=".Faculty_Welcome_Screen"
            android:exported="true" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>